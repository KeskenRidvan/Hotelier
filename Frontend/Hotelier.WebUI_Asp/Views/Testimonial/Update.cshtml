@model TestimonialUpdateDto

@{
	ViewData["Title"] = "Update";
	Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
	<input type="hidden" asp-for="TestimonialID" />
	<label>Referans Adi</label>
	<input type="text" asp-for="Name" class="form-control" />
	<br />

	<label>Referans Unvani</label>
	<input type="text" asp-for="Title" class="form-control" />
	<br />

	<label>Referans Aciklamasi</label>
	<input type="text" asp-for="Description" class="form-control" />
	<br />

	<label>Referans Resmi</label>
	<input type="text" asp-for="Image" class="form-control" />
	<br />

	<button class="btn btn-primary">Referansi Guncelle</button>
</form>