@model List<RoomGetDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>Oda Numarasi</th>
		<th>Oda Ucreti</th>
		<th>Baslik</th>
		<th>Yatak Sayisi</th>
		<th>Banyo Sayisi</th>
		<th>Wifi Sifresi</th>
		<th>Aciklama</th>
		<th>Sil</th>
		<th>Guncelle</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.RoomID</td>
			<td>@item.RoomNumber</td>
			<td>@item.Title</td>
			<td>@item.BedCount</td>
			<td>@item.BathCount</td>
			<td>@item.Wifi</td>
			<td>@item.Description</td>
			<td><a asp-controller="Room" asp-action="Delete" asp-route-id="@item.RoomID" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
			<td><a asp-controller="Room" asp-action="Update" asp-route-id="@item.RoomID" class="btn mb-1 btn-rounded btn-outline-success">Guncelle</a></td>
			<td><a href="#" class="btn mb-1 btn-rounded btn-outline-dark">Detaylar</a></td>
		</tr>
	}
</table>

<a asp-controller="Room" asp-action="Add" class="btn mb-1 btn-rounded btn-outline-info">Yeni Oda Girisi</a>
