@model Hotelier.WebUI_Asp.Models.Setttings.UserEditViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Profil Bilgileri ve Sifre Guncelleme</h1>

<form method="post">
    <label>Adiniz</label>
    <input type="text" class="form-control" asp-for="Name" />
    <br />
    <label>Soyadiniz</label>
    <input type="text" class="form-control" asp-for="Surname" />
    <br />
    <label>Kullanici Adiniz</label>
    <input type="text" class="form-control" asp-for="Username" readonly />
    <br />
    <label>Email Adresiniz</label>
    <input type="text" class="form-control" asp-for="Email" />
    <br />
    <label>Sifreniz</label>
    <input type="password" class="form-control" asp-for="Password" />
    <br />
    <label>Sifreniz Tekrar</label>
    <input type="password" class="form-control" asp-for="ConfirmPassword" />
    <br />
    <button class="btn btn-success">Bilgileri Guncelle</button>
</form>